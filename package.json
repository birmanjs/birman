{
  "name": "@birman/workspace",
  "description": "react application framework",
  "private": true,
  "repository": "git@github.com:birmanjs/birman.git",
  "author": "wangxingkang <wang_xingkang@qq.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "build": "father-build",
    "test": "node ./packages/birman-test/bin/birman-test.js",
    "prettier": "walrus prettier",
    "lint": "walrus lint",
    "lint:commit": "walrus commitlint --env HUSKY_GIT_PARAMS",
    "prerelease": "yarn build",
    "release": "walrus release"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@walrus/cli": "^0.4.1",
    "@walrus/pansy": "^0.3.0",
    "@walrus/plugin-release": "^1.3.4",
    "father-build": "^1.17.2",
    "husky": "^3.1.0",
    "lerna": "^3.20.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier",
      "commit-msg": "yarn lint:commit"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.9.0",
    "yarn": ">=1.3.2"
  }
}
