{
  "name": "@birman/workspace",
  "description": "react application framework",
  "private": true,
  "repository": "git@github.com:birmanjs/birman.git",
  "author": "Birman Team",
  "license": "MIT",
  "scripts": {
    "build": "father-build",
    "test": "node ./packages/test/bin/birman-test.js",
    "prettier": "walrus prettier",
    "lint": "walrus lint",
    "lint:commit": "walrus commitlint --env HUSKY_GIT_PARAMS",
    "release": "walrus release"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@walrus/cli": "^1.3.0",
    "@walrus/plugin-release": "^1.8.1",
    "@walrus/preset-lint": "^1.1.5",
    "father-build": "^1.18.2",
    "husky": "^3.1.0",
    "lerna": "^3.22.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier",
      "commit-msg": "yarn lint:commit"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.9.0",
    "yarn": ">=1.3.2"
  }
}
